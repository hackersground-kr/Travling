<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_text">
        <item name="android:fontFamily">@font/suite_boldextra</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base</item>
    </style>
    <style name="button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="card">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="drawer">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginBottom">@dimen/textTopMargin</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="level1_button">
        <item name="android:background">@drawable/level1_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="level2_button">
        <item name="android:background">@drawable/level2_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="level3_button">
        <item name="android:background">@drawable/level3_button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>